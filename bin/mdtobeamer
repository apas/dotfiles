#!/bin/bash
filename=${1}
output=${filename%.md}

hincl="\metroset{progressbar=foot,block=fill}"

pandoc ${filename} --slide-level 2 -t beamer --latex-engine=xelatex \
  -V theme:metropolis \
  -F pandoc-crossref \
  -F pandoc-citeproc \
  -f markdown+raw_tex+yaml_metadata_block \
  -Mlink-citations=true \
  -M date="`date "+%B %e, %Y"`" \
  -Mheader-includes="$hincl" \
  -o ${output}.pdf
open -a Preview ${output}.pdf
