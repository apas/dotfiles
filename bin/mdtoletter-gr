#!/bin/bash
filename=${1}
output=${filename%.md}
pandoc ${filename} --template=/Users/apas/.pandoc/templates/letter.latex \
  --latex-engine=/Library/TeX/texbin/xelatex \
  -H /Users/apas/.pandoc/templates/fonts.tex \
  -f markdown+raw_tex+yaml_metadata_block \
  --variable urlcolor=blue \
  -M date="`date "+%B %e, %Y"`" \
  -t latex --highlight-style pygments -o ${output}.pdf
open -a Preview ${output}.pdf
